{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@xcritical/*": ["node_modules/@xcritical/*/src"]
    }
  },
  "include": [
    "packages/**/src/**/*",
    "packages/**/tsup.config.ts",
    "packages/**/stories/**/*",
    "packages/**/test/**/*",
    "./jest-setup.ts",
    "./tsup.config.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
  ],
}